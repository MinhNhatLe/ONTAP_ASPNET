@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Services";
    ViewBag.active = 3;
}

<main>
    <div class="page-section">
        <div class="container">
            <div>
                <a href="~/Services/Them">Them</a>
                <br />
                <a href="~/Services/Them2">Them so 2</a>

            </div>
            <h3>
                Table cach 7
            </h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Ma May
                        </th>
                        <th>
                            Dong May
                        </th>
                        <th>
                            Gia ban
                        </th>
                        <th>
                            NSX
                        </th>
                        <th>
                            HSX
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @*// dùng foreach để đẩy dữ liệu ra*@
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.MaMay
                            </td>
                            <td>
                                @item.DongMay
                            </td>
                            <td>
                                @string.Format("{0:#,0}", item.GiaBan)
                            </td>
                            <td>
                                @string.Format("{0:dd-MM-yyyy}", item.NgaySanXuat)
                            </td>
                            <td>
                                @item.HangSanXuat
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div> <!-- .container -->
    </div> <!-- .page-section -->


</main>

