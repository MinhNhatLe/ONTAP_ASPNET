@model test_asp_mvc.Models.DonHang

@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.active = 100;
}

<h2>ChiTietDonHang</h2>

<div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <h4>Chi tiet khach hang dat don hang</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.TenKhachHang)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenKhachHang)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SoDienThoai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SoDienThoai)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DiaChiGiaoHang)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DiaChiGiaoHang)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NgayDatHang)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayDatHang)
                    </dd>

                </dl>
            </div>
            <div class="col-lg-8">
                <a href="~/DonHang/ThemChiTiet?idDonHang=@Model.ID">Them chi tiet don hang</a>
                <table class="table-bordered">
                    <tr>
                        <th>
                            ma may
                        </th>
                        <th>
                            dong may
                        </th>
                        <th>
                            gia ban
                        </th>
                        <th>
                            nsx
                        </th>
                        <th>
                            hang san xuat
                        </th>
                        <th>
                            #
                        </th>
                    </tr>
                    @foreach (var item in Model.MayTinhDatMua)
                    {
                        <tr>
                            <td>@item.MaMay</td>
                            <td>@item.DongMay</td>
                            <td>@item.GiaBan</td>
                            <td>@item.NgaySanXuat</td>
                            <td>@item.HangSanXuat</td>
                            <td>
                                <a href="~/DonHang/CapNhatChiTiet?idDonHang=@Model.ID&maMay=@item.MaMay">Sua</a> |
                                <a href="~/DonHang/XoaChiTiet?idDonHang=@Model.ID&maMay=@item.MaMay">xoa</a>
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </div>


    </div>
</div>
